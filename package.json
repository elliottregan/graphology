{
  "name": "graphology-monorepo",
  "private": true,
  "workspaces": ["src/*"],
  "scripts": {
    "build": "bun run clean && bun run build:graphology && bun run build:library",
    "build:graphology": "bun run --filter graphology build",
    "build:library": "bun run --filter graphology-library build",
    "clean": "bun run --filter '*' clean",
    "test": "bun run --filter '*' test",
    "test:types": "tsc --noEmit",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "eslint './src/**/*.{js,ts}' --fix",
    "format": "prettier --write './src/**/*.{js,ts,md}'",
    "format:check": "prettier --check './src/**/*.{js,ts,md}'",
    "typecheck": "tsc --noEmit",
    "docs": "vitepress dev docs",
    "docs:build": "bun run docs:update-lib && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:update-lib": "bun scripts/make-stdlib-docs.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "vitepress": "^1.5.0",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "lodash": "^4.17.21",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "seedrandom": "^3.0.5",
    "simple-statistics": "^7.8.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "graphology": "workspace:*",
    "graphology-assertions": "workspace:*",
    "graphology-bipartite": "workspace:*",
    "graphology-canvas": "workspace:*",
    "graphology-communities-leiden": "workspace:*",
    "graphology-communities-louvain": "workspace:*",
    "graphology-components": "workspace:*",
    "graphology-cores": "workspace:*",
    "graphology-dag": "workspace:*",
    "graphology-generators": "workspace:*",
    "graphology-gexf": "workspace:*",
    "graphology-graphml": "workspace:*",
    "graphology-indices": "workspace:*",
    "graphology-layout": "workspace:*",
    "graphology-layout-force": "workspace:*",
    "graphology-layout-forceatlas2": "workspace:*",
    "graphology-layout-noverlap": "workspace:*",
    "graphology-library": "workspace:*",
    "graphology-metrics": "workspace:*",
    "graphology-minivan": "workspace:*",
    "graphology-operators": "workspace:*",
    "graphology-shortest-path": "workspace:*",
    "graphology-similarity": "workspace:*",
    "graphology-simple-path": "workspace:*",
    "graphology-sparsification": "workspace:*",
    "graphology-svg": "workspace:*",
    "graphology-traversal": "workspace:*",
    "graphology-types": "workspace:*",
    "graphology-utils": "workspace:*"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "trailingComma": "none"
  }
}
